{
  "name": "talt",
  "version": "2.2.3",
  "description": "Template functions to generate TypeScript AST.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:ci": "jest --coverage",
    "prettier": "prettier \"*.md\" \"*.json\" \"*.yml\" \"src/**/*\"",
    "format": "yarn prettier --write",
    "format:check": "yarn prettier --check",
    "lint": "yarn format:check",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Quramy/talt.git"
  },
  "keywords": [
    "TypeScript",
    "AST"
  ],
  "author": "Quramy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/quramy/talt/issues"
  },
  "homepage": "https://github.com/quramy/talt#readme",
  "dependencies": {},
  "peerDependencies": {
    "typescript": "^3.0.0 || ^4.0.0"
  },
  "devDependencies": {
    "@types/jest": "27.4.1",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "pinst": "3.0.0",
    "prettier": "2.6.2",
    "pretty-quick": "3.1.3",
    "rimraf": "3.0.2",
    "ts-jest": "27.1.4",
    "typescript": "4.6.3"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(src/.*\\.test)\\.ts$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "\\.d\\.ts$",
      "lib/.*"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!**/testing/**"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "json"
    ]
  }
}
