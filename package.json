{
  "name": "talt",
  "version": "2.3.1",
  "description": "Template functions to generate TypeScript AST.",
  "type": "module",
  "types": "./lib/index.d.ts",
  "main": "./lib_cjs/index.js",
  "exports": {
    ".": {
      "import": {
        "types": "./lib/index.d.ts",
        "default": "./lib/index.js"
      },
      "require": {
        "types": "./lib/index.d.ts",
        "default": "./lib_cjs/index.cjs"
      }
    }
  },
  "files": [
    "lib",
    "lib_cjs"
  ],
  "scripts": {
    "clean": "rimraf lib lib_cjs \"*.tsbuildinfo\" .rollup.cache coverage",
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p tsconfig.build.json",
    "build:cjs": "rollup -c rollup.config.cjs.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:ci": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "prettier": "prettier \"*.md\" \"*.json\" \"*.yml\" \"src/**/*\"",
    "format": "yarn prettier --write",
    "format:check": "yarn prettier --check",
    "lint": "yarn format:check",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Quramy/talt.git"
  },
  "keywords": [
    "TypeScript",
    "AST"
  ],
  "author": "Quramy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/quramy/talt/issues"
  },
  "homepage": "https://github.com/quramy/talt#readme",
  "peerDependencies": {
    "typescript": "^3.0.0 || ^4.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "8.3.2",
    "@types/jest": "27.5.1",
    "husky": "8.0.1",
    "jest": "28.1.0",
    "pinst": "3.0.0",
    "prettier": "2.6.2",
    "pretty-quick": "3.1.3",
    "rimraf": "3.0.2",
    "rollup": "2.75.5",
    "ts-jest": "28.0.3",
    "typescript": "4.7.2"
  }
}
